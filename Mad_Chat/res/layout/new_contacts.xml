<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/navbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:layout_weight="2"
            android:gravity="left" >

            <ImageView 
                android:id="@+id/newContacts_back"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:background="@drawable/back_btn"/>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_height="match_parent"
            android:layout_width="match_parent"
           android:layout_weight="1"
            android:gravity="center"
            >
            <TextView 
                android:id="@+id/contacts_headerText"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="New"
                android:textColor="#fff"
                android:gravity="center_vertical"
                android:textSize="18sp"/>
        </LinearLayout>
 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:layout_weight="2"
            android:gravity="left" >
            </LinearLayout>
        
    </LinearLayout>
    

    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:id="@+id/newContact_group_img"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/newgroup"/>
        <TextView 
            android:id="@+id/newContact_group_text"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="New group"
           android:textSize="16sp"
           android:layout_marginLeft="20dp"
           android:textColor="#6EB4FD"/>
    </LinearLayout>
    <View 
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="#6EB4FD"/>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical">
        <ImageView 
            android:id="@+id/newContact_chat_img"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/newchat"
            />
        <TextView 
            android:id="@+id/newContact_chat_text"
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:text="New Chat"
           android:layout_marginLeft="20dp"
           android:textSize="16sp"
           android:textColor="#6EB4FD"/>
    </LinearLayout>
    <View 
        android:id="@+id/view_contact"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#6EB4FD"/>
    <LinearLayout 
        android:id="@+id/hide_contactList"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
    <ImageView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/name_patch"/>
    <ListView 
        android:id="@+id/newContact_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        ></ListView>
    </LinearLayout>
</LinearLayout>
