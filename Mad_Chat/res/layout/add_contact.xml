<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/navbar">
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_weight="2">
            <ImageView 
                android:id="@+id/addContact_back"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/back_btn"/>
        </LinearLayout>
         <LinearLayout 
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="New Contact"
                android:textColor="#fff"
                android:textSize="18sp"/>
        </LinearLayout>
         <LinearLayout 
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="right|center_vertical">
             <TextView 
                 android:id="@+id/addContact_done"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Done"
                android:layout_marginRight="5dp"
                android:textColor="#fff"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <EditText 
            android:id="@+id/addContact_FirstName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:textSize="16sp"
            android:hint="First Name"
            android:textColor="#696969"
            android:background="#00000000"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>
        <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#696969"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <EditText 
            android:id="@+id/addContact_lastName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:textSize="16sp"
            android:hint="Last Name"
            android:textColor="#696969"
            android:background="#00000000"
             android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>
        <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#696969"/>
    </LinearLayout>
<LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
             <LinearLayout 
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:layout_weight="4"
                 android:gravity="center"
                 android:orientation="vertical">
                 <ImageView 
                     android:id="@+id/addContact_puls"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:background="@drawable/add_icon"/>
             </LinearLayout>
              <LinearLayout 
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_weight="1"
                 android:orientation="vertical">
                  <TextView 
                      android:id="@+id/addContact_addPhone"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:textSize="16sp"
            android:text="Add Phone"
            android:textColor="#696969"
             android:paddingTop="10dp"
            android:paddingBottom="10dp"
           
            android:paddingRight="30dp"/>
             </LinearLayout>
       
        </LinearLayout>
        <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#696969"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/addContact_minus_lay"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
             <LinearLayout 
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:layout_weight="4"
                 android:gravity="center"
                 android:orientation="vertical"
                 >

                 <ImageView
                     android:id="@+id/addContact_minus"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/minus_icon" />

             
                 
             </LinearLayout>
              <LinearLayout 
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:layout_weight="1"
                 android:orientation="horizontal">
                 <TextView 
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:text="Mobile"
                     android:textColor="#696969"/>
                 <View 
                     android:layout_height="match_parent"
                     android:layout_width="1dp"
                     android:layout_marginLeft="20dp"
                     android:layout_marginRight="20dp"
                     android:background="#696969"/>
                  <EditText 
                      android:id="@+id/addContact_addPhoneno"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:textSize="16sp"
            android:hint="Add Phone"
            android:textColor="#696969"
            android:background="#00000000"
             android:paddingTop="10dp"
            android:paddingBottom="10dp"
           android:inputType="number"
            android:paddingRight="30dp"/>
             </LinearLayout>
       
        </LinearLayout>
        <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#696969"/>
    </LinearLayout>
</LinearLayout>
