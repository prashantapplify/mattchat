<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/navbar">
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="left">
            <ImageView 
                android:id="@+id/account_back"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/back_btn"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView 
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="Account"
               android:textColor="#fff"
               android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="2">
            
        </LinearLayout>
    </LinearLayout>
<LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="15dp"
		android:paddingBottom="5dp"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/account_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Privacy"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="#929292"
            android:textSize="16sp"/>
         <TextView 
            android:id="@+id/account_numer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Privacy"
            android:singleLine="true"
            android:textColor="#929292"
            android:textSize="16sp"/>
    </LinearLayout>
    <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="#004a80"/>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="15dp"
		android:paddingBottom="5dp"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/account_privacy"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Privacy"
            android:textColor="#000"
            android:textSize="16sp"/>
    </LinearLayout>
    <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="#004a80"/>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:paddingTop="15dp"
		android:paddingBottom="5dp"
        android:orientation="vertical">
         <TextView 
             android:id="@+id/account_changMyNumber"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Change my number"
            android:textColor="#000"
            android:textSize="16sp"/>
    </LinearLayout>
    <View 
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="#004a80"/>
    <LinearLayout 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/tabbar"
            
            android:gravity="center">
            <LinearLayout 
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="#6EB4FF"
                android:gravity="center">
            <TextView 
                android:id="@+id/account_deleteMyAccount"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="Delete my account"
                android:textColor="#fff"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
